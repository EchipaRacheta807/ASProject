
@{ ViewBag.Title = "New Category"; }

<br />

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

@if (TempData.ContainsKey("message"))
{
<h3 class="alert alert-info" role="alert">@TempData["message"]</h3>
}


<h2>Adaugare Categorie</h2>

<form method="post" action="/Categories/New">

    @Html.Label("CategoryName", "Category Name")
    <br />

    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    <br /><br />

    <button class="btn btn-success" type="submit">Add Category</button>
</form>

