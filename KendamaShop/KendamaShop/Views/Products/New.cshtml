@model KendamaShop.Models.Product

<h2>Add product</h2>

<form method="post" action="/Products/New">
    @Html.Label("Title", "Product title")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })
    <br /> <br />

    @Html.Label("Description", "Product description")
    <br />
    @Html.TextArea("Description", null, new { @class = "form-control " })
    <br /> <br />

    @Html.Label("Price", "Product price")
    <br />
    @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @value = "0" ,
                            @class = "form-control" } })
    <br /> <br />

    @Html.Label("Rating", "Product rating")
    <br />
    @Html.EditorFor(m => m.Rating, new { htmlAttributes = new { @type = "number", @min = "0", @max="5", @step = "0.5", @value = "0",
                            @class = "form-control" } })
    <br /> <br />

    <button class="btn btn-sm btn-success" type="submit">Add</button>
</form>