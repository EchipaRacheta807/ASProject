<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            @Html.ActionLink("Kendama Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Produts/Index">List all Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Categories/Index">List all Categories</a>
                    </li>
                    @if (User.IsInRole("Partner") || User.IsInRole("Admin") || User.IsInRole("User"))
                    {
                        <li class="nav-item">@Html.ActionLink("View Orders", "Index", "Orders", new { @class = "nav-link active" })</li>
                        <li class="nav-item">@Html.ActionLink("View Cart", "Show", "Orders", new { @class = "nav-link active" })</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("List Users", "Index", "Users", new { @class = "nav-link active" })</li>
                        <li class="nav-item">@Html.ActionLink("Pending products", "Pending", "Products", new { @class = "nav-link active" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
