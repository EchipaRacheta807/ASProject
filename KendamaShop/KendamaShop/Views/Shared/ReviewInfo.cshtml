
<div class="card-header">
    @for (int i = 1; i <= Model.Stars; i++)
    {
        <i class="fas fa-star"></i>
    }
    @if (Math.Abs(Model.Stars - ((int)Model.Stars) - 0.5) < 0.001)
    {
        <i class="fas fa-star-half"></i>
    }
</div>
<div class="card-body">
    <i class="fas fa-calendar-alt"></i> Data: <strong>@Model.Date</strong>
    <br />
    <i class="fas fa-file-alt"></i> Content: <strong>@Model.Content</strong>
    <br />
    <i class="fas fa-user"></i> Review written by: </i>
    <strong> @Model.User.UserName </strong>
</div>
