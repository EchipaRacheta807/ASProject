<div class="card-header">@Model.Title</div>
<img src="data:image;base64,@Convert.ToBase64String(Model.ImageFile)" class="card-img-top" style="height: auto; max-height:200px; width: auto; margin: 0 auto;">
<div class="card-body">
    <i class="fas fa-align-justify"></i> Product description: <strong>@Model.Description</strong>
    <br /><i class="fas fa-money-bill-wave"></i> Product price: <strong>$@Model.Price</strong>
    <br /><i class="fas fa-smile"></i> Product rating:
    @for (int i = 1; i <= Model.Rating; i++)
    {
        <i class="fas fa-star"></i>
    }
    @if (Math.Abs(Model.Rating - ((int)Model.Rating) - 0.5) < 0.001)
    {
        <i class="fas fa-star-half"></i>
    }
    <br /><i class="fas fa-cube"></i> Product category: <strong>@Model.Category.CategoryName</strong>
    <br /> <i class="fas fa-user"></i> Product added by:
    <strong> @Model.User.UserName </strong>
</div>