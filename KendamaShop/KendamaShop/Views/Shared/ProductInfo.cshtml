<div class="card-header">
    <strong>
        @Model.Title (@if (ViewBag.ProductCount != null)
        {
            @ViewBag.ProductCount[Model.ProductId]
        })
    </strong>
</div>
<img src="data:image;base64,@Model.ImageFile" class="card-img-top" style="height: auto; max-height:200px; width: auto; margin: 0 auto;">
<div class="card-body">
    <i class="fas fa-align-justify"></i> <strong>Product description:</strong> @Model.Description
    <br /><i class="fas fa-money-bill-wave"></i> <strong>Product price: </strong>$@Model.Price
    <br /><i class="fas fa-smile"></i> <strong>Product rating: </strong>
    @for (int i = 1; i <= Model.Rating; i++)
    {
        <i class="fas fa-star"></i>
    }
    @if (Math.Abs(Model.Rating - ((int)Model.Rating) - 0.5) < 0.001)
    {
        <i class="fas fa-star-half"></i>
    }
    <br /><i class="fas fa-cube"></i> <strong>Product category: </strong>@Model.Category.CategoryName
    <br /> <i class="fas fa-user"></i> <strong>Product added by: </strong>
     @Model.User.UserName
</div>