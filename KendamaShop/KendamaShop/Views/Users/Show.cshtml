@model KendamaShop.Models.ApplicationUser

@{
    ViewBag.Title = "User details:";
}

<br />

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.Message</h3>
}

<div class="card shadow">
    <div class="card-header">
        @Model.UserName
    </div>
    <div class="card-body">
        <i class="glyphicon glyphicon-envelope"></i> User email: <span class="label label-default">@Model.Email</span>
        <br />
        <i class="glyphicon glyphicon-th-list"></i> User role: @ViewBag.roleName

        <br /><br />
        @if (@Model.PhoneNumber != null)
        {
            <i class="glyphicon glyphicon-phone"></i>@:User phone number:<span class="label label-default">@Model.PhoneNumber</span>




        }
    </div>
    @if ((string)Model.Id != ViewBag.currentUser)
    {
        <div class="card-footer">
            <a class="btn btn-success" href="/Users/Edit/@Model.Id">Edit user</a>
            @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", routeValues: new { id = @Model.Id }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <br />
                <button class="btn btn-success" type="submit">Delete user</button>

            }
        </div>
    }
</div>